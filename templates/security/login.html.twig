{% extends 'base.html.twig' %}

{% block title %}{% trans %}Anmelden{% endtrans %}{% endblock %}

{% block body %}
<div class="formulaire"> 
    <div class="wrapper">
        <form method="post" class="form-login-container">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    {% trans %}Sie sind eingeloggt als{% endtrans %} {{ app.user.username }}, <a href="{{ path('app_logout') }}">{% trans %}Abmelden{% endtrans %}</a>
                </div>
            {% endif %}

            <div class="info-box-authentification">
                <h1>{% trans %}Melden Sie sich an!{% endtrans %}</h1>
            </div>
            <div class="form-container">
                <label for="inputEmail">{% trans %}Email{% endtrans %}</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-container">
                <label for="inputPassword">{% trans %}Passwort{% endtrans %}</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <div class="mb-3">
                    <a href="{{ path('reset_password') }}">{% trans %}Passwort vergessen?{% endtrans %}</a>
                </div>
            </div>
            {# hidden input pour insÃ©rer la variable back_to_your_page #}
            <input type="hidden" name="_target_path" value="{{ back_to_your_page }}"/> 
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >       

            <div class="form-container">
                <label>
                    <input type="checkbox" name="_remember_me"> {% trans %}Angemeldet bleiben?{% endtrans %}
                </label>
            </div>
                
            <button class="btn btn-lg btn-primary login-btn" type="submit">
                {% trans %}Anmeldung{% endtrans %}
            </button>
        </form>
        <div class="google-auth">
            <a href="{{ path('connect_google_start') }}" class="btn btn-primary">{% trans %}Anmeldung mit Google{% endtrans %}</a>
        </div>
    </div>
</div>
{% endblock %}
