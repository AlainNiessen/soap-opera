{% extends 'base.html.twig' %}

{% block title %}Anmelden{% endblock %}

{% block body %}
<div class="formulaire"> 
    <div class="wrapper">
        <form method="post" class="form-login-container">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Sie sind eingeloggt als {{ app.user.username }}, <a href="{{ path('app_logout') }}">Abmelden</a>
                </div>
            {% endif %}

            <div class="info-box-authentification">
                <h1>Melden Sie sich an!</h1>
            </div>
            <div class="form-container">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-container">
                <label for="inputPassword">Passwort</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                <div class="mb-3">
                    <a href="{{ path('reset_password') }}">Passwort vergessen?</a>
                </div>
            </div>
            {# hidden input pour ins√©rer la variable back_to_your_page #}
            <input type="hidden" name="_target_path" value="{{ back_to_your_page }}"/> 
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >       

            <div class="form-container">
                <label>
                    <input type="checkbox" name="_remember_me"> Angemeldet bleiben?
                </label>
            </div>
                
            <button class="btn btn-lg btn-primary login-btn" type="submit">
                Anmeldung
            </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}
