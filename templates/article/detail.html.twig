{% extends 'base.html.twig' %}

{% block title %}Detail Artikel{% endblock %}

{% block body %}

{# rendering fragment recherche #}
{{ render(path('recherche')) }}

<section class="m-article-detail">
    <div class="wrapper">
        <section class="m-article-detail-intro">
            <h1>{{ article.traductionArticles[0].nom }}</h1>
            <p>{{ article.traductionArticles[0].slogan }}</p>
            <div class="m-article-detail-intro-img">
                {% for image in article.images %}
                    {% if image.coverDetailArticle == true %}                           
                        <img src="{{ asset('/uploads/images/'~image.nom) }}" alt="{{ article.traductionArticles[0].nom}}" title="{{ article.traductionArticles[0].nom}}">                            
                    {% endif %}
                {% endfor %}
            </div>
        </section>
        <section class="m-article-detail-info">        
            <div class="container-onglets">
                <div class="onglets act" data-anim="1">Beschreibung</div>
                <div class="onglets" data-anim="2">Zutaten</div>
                <div class="onglets" data-anim="3">Bewertungen</div>
            </div>
            <div class="contenu activeContenu" data-anim="1">
                <div class="m-article-detail-info-box">
                    <h3>Allgemeine Beschreibung:</h3>               
                    <p>{{ article.traductionArticles[0].description }}</p>
                </div>
                <div class="m-article-detail-info-box">
                    <h3>Kategorie:</h3>
                    <p>{{ article.categorie.traductionCategories[0].nom }}</p> 
                </div>
                <div class="m-article-detail-info-box">
                    <h3>Preis:</h3>
                    <p>{{ prix }}</p> 
                </div>
                <div class="m-article-detail-info-btn">
                    <a href="#" class="btn btn-outline-info">In den Warenkorb</i></a>
                </div>      
            </div>
            <div class="contenu" data-anim="2">
                <div class="row"> 
                    <div class="col-6">           
                        <div class="contenu-box">
                            <h3>Butter:</h3>
                            {% if beurres is defined and beurres is not null and beurres is not empty %}
                                <ul>
                                {% for beurre in beurres %}
                                        {% for value in beurre %}
                                            <li>{{ value.nom }}</li>
                                        {% endfor %}
                                {% endfor %}
                                </ul>
                            {% else %}
                                <p>/</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-6"> 
                        <div class="contenu-box">
                            <h3>Öle:</h3>
                            {% if huiles is defined and huiles is not null and huiles is not empty %}
                                <ul>
                                {% for huile in huiles %}
                                    {% for value in huile %}
                                            <li>{{ value.nom }}</li>
                                        {% endfor %}
                                {% endfor %}
                                </ul>
                            {% else %}
                                <p>/</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-6"> 
                        <div class="contenu-box">
                            <h3>Ätherische Öle:</h3>
                            {% if huilesEss is defined and huilesEss is not null and huilesEss is not empty %}
                                <ul>
                                {% for huileEss in huilesEss %}
                                    {% for value in huileEss %}
                                            <li>{{ value.nom }}</li>
                                        {% endfor %}
                                {% endfor %}
                                </ul>
                            {% else %}
                                <p>/</p>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col-6"> 
                        <div class="contenu-box">
                            <h3>Sonstige Zutaten:</h3>
                            {% if ingredientsSupp is defined and ingredientsSupp is not null and ingredientsSupp is not empty %}
                                <ul>
                                {% for ingredientSupp in ingredientsSupp %}
                                    {% for value in ingredientSupp %}
                                            <li>{{ value.nom }}</li>
                                        {% endfor %}
                                {% endfor %}
                                </ul>
                            {% else %}
                                <p>/</p>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>               
            <div class="contenu" data-anim="3">
                <h3>Bewertungen</h3>
                <hr>
                <p>JIJI</p>
            </div>
        </section>
    </div>
</section>



{% endblock %}