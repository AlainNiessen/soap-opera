        <li class="page-item"><a href="{{ path('article_recherche_promo', {pagPromo: 1}) }}" class="page-link"><<</a></li>
        <li class="page-item"><a href="{{ path('article_recherche_promo', {pagPromo: pagPromo - 1}) }}" class="page-link"><</a></li>
        <li class="move">...</li> 
    {% endif %} 
    {% if pagPromo == 1 %}
        {% if nombreLiens == 1 %}            
            <li class="page-item active"><a href="{{ path('article_recherche_promo', {pagPromo: 1}) }}" class="page-link">1</a></li>            
        {% else %}
            {% for i in range(pagPromo, pagPromo + 1) %}
                {% if i == pagPromo %} 
                    <li class="page-item active"><a href="{{ path('article_recherche_promo', {pagPromo: i}) }}" class="page-link">{{ i }}</a></li>
                {% else %}
                    <li class="page-item"><a href="{{ path('article_recherche_promo', {pagPromo: i}) }}" class="page-link">{{ i }}</a></li>
                {% endif %}
            {% endfor %}
        {% endif %}   
    {% elseif pagPromo > 1 and pagPromo <= nombreLiens - 1 %}
        {% for i in range(pagPromo - 1, pagPromo + 1) %}
            {% if i == pagPromo %} 
                <li class="page-item active"><a href="{{ path('article_recherche_promo', {pagPromo: i}) }}" class="page-link">{{ i }}</a></li>
            {% else %}
                <li class="page-item"><a href="{{ path('article_recherche_promo', {pagPromo: i}) }}" class="page-link">{{ i }}</a></li>
            {% endif %}
        {% endfor %}
    {% elseif pagPromo == nombreLiens %}
        {% for i in range(pagPromo - 1, nombreLiens) %}
            {% if i == pagPromo %} 
                <li class="page-item active"><a href="{{ path('article_recherche_promo', {pagPromo: i}) }}" class="page-link">{{ i }}</a></li>
            {% else %}
                <li class="page-item"><a href="{{ path('article_recherche_promo', {pagPromo: i}) }}" class="page-link">{{ i }}</a></li>
            {% endif %}
        {% endfor %}        
    {% endif %}
    {% if pagPromo < nombreLiens %}
            <li class="move">...</li>
            <li class="page-item"><a href="{{ path('article_recherche_promo', {pagPromo: pagPromo + 1}) }}" class="page-link">></a></li>
