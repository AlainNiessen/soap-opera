{% extends 'base.html.twig' %}

{% block title %}Einschreibung{% endblock %}

{% block body %}
 <div class="formulaire"> 
    <div class="wrapper">   
        <div class="info-box-inscription">
            <h1>Einschreibung</h1>        
            <p>Bitte füllen Sie alle Felder aus. Anschliessend werden Sie eine Mail erhalten, in dem Sie Ihre Einschreibug bestätigen müssen.</p>
        </div>    
        {{ form_start(formInscription, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <div class="form-container">
            <h3>Login-Daten</h3>
            {{ form_row(formInscription.email) }}
            {{ form_row(formInscription.plainPassword) }}
        </div>
        <div class="form-container">
            <h3>Persönliche Informationen</h3>
            <div class="form-flex-container">
                {{ form_row(formInscription.nom) }}
                {{ form_row(formInscription.prenom) }}
            </div>
            {{ form_row(formInscription.dateNaissance) }}
        </div>
        <div class="form-container">
            <h3>Wohnadresse</h3>
            <div class="form-flex-container">
                {{ form_row(formInscription.adresseHome.rue, {'attr': {'novalidate': 'novalidate'}}) }}
                {{ form_row(formInscription.adresseHome.numeroRue, {'attr': {'novalidate': 'novalidate'}}) }}
            </div>
            <div class="form-flex-container">
                {{ form_row(formInscription.adresseHome.codePostal) }}
                {{ form_row(formInscription.adresseHome.ville) }}
            </div>
            {{ form_row(formInscription.adresseHome.pays) }}
        </div>
            <div class="form-container">
            <h3>Lieferadresse</h3>
            <div class="form-flex-container">
                {{ form_row(formInscription.adresseDeliver.rue) }}
                {{ form_row(formInscription.adresseDeliver.numeroRue) }}
            </div>
            <div class="form-flex-container">
                {{ form_row(formInscription.adresseDeliver.codePostal) }}
                {{ form_row(formInscription.adresseDeliver.ville) }}
            </div>
            {{ form_row(formInscription.adresseDeliver.pays) }}
        </div>
        <div class="form-container">
            <h3>Wählen Sie eine Sprache aus</h3>
            {{ form_row(formInscription.langue) }}
        </div>
        {{ form_row(formInscription.submit) }}

        {{ form_end(formInscription) }}
    </div>
</div>
{% endblock %}
